pipeline {
    agent any

    environment {
        DOCKER_CLI = 'docker'
        DOCKER_REGISTRY = 'saadr8840'
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/Saad-Mansoor-Minhas/redis-flask-app'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Set Minikube Docker environment
                    sh 'scripts/set_minikube_env.sh'

                    // Verify Docker environment
                    sh 'docker info'

                    // Build Docker image
                    sh 'docker build -t redis-flask-app .'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Tag and push Docker image
                    sh 'docker tag redis-flask-app:latest $DOCKER_REGISTRY/redis-flask-app:latest'
                    sh 'docker push $DOCKER_REGISTRY/redis-flask-app:latest'
                }
            }
        }

        stage('Deploy to Minikube') {
            steps {
                script {
                    
                    sh 'chmod +x scripts/install.sh'
                    // Apply Kubernetes deployment
                    sh 'scripts/install.sh'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
